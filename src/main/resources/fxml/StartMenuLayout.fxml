<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.geometry.Insets?>

<VBox
    alignment="CENTER"
    id="StartMenuLayout"
    prefHeight="960.0"
    prefWidth="1360.0"
    spacing="180"
    xmlns="http://javafx.com/javafx/8.0.141"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="org.example.marketstock.fxml.StartMenuLayoutController"
>
    <padding>
        <Insets topRightBottomLeft="30" />
    </padding>
    <Label
        alignment="CENTER"
        contentDisplay="CENTER"
        minHeight="-Infinity"
        minWidth="-Infinity"
        maxHeight="300.0"
        maxWidth="Infinity"
        prefHeight="300.0"
        text="Market Stock Simulator"
    >
        <font>
            <Font size="30.0"/>
        </font>
    </Label>
    <VBox
        alignment="CENTER"
        maxHeight="300.0"
        maxWidth="180.0"
        prefHeight="300.0"
        prefWidth="180.0"
        spacing="60"
    >
        <Button
            alignment="CENTER"
            defaultButton="true"
            maxHeight="60.0"
            maxWidth="180.0"
            mnemonicParsing="false"
            onAction="#handleNewGame"
            prefHeight="60.0"
            prefWidth="180.0"
            text="New Game"
        />
        <Button
            alignment="CENTER"
            maxHeight="60.0"
            maxWidth="180.0"
            mnemonicParsing="false"
            onAction="#handleGuide"
            prefHeight="60.0"
            prefWidth="180.0"
            text="Guide"
        />
        <Button
            alignment="CENTER"
            cancelButton="true"
            maxHeight="60.0"
            maxWidth="180.0"
            mnemonicParsing="false"
            onAction="#handleExit"
            prefHeight="60.0"
            prefWidth="180.0"
            text="Exit"
        />
    </VBox>
</VBox>
